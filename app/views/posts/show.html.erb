<%= flash[:notice] %>

<%= link_to '#', id: 'favorite_btn' do %>
  <i class="far fa-heart"></i>
<% end %>




<h2><%= @post.user.nickname %></h2>
<h1><%= @post.title %></h1>


<%= link_to '編輯文章', edit_post_path(@post) if @post.owned_by?(current_user) %>
<article>
  <%= simple_format(@post.content) %>
</article>



<%= form_for(@comment, url: post_comments_path(@post), remote: true) do |form| %>

  <%= form.text_field :content, placeholder: '請輸入留言' %>
  <%= form.submit %>

<% end %>
  
<ul class="comment">
  <%= render @comments %>
</ul>